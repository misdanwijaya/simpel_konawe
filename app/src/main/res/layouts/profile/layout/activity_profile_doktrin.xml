<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.doktrin"
    android:background="@drawable/bg9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/doktrin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e2e2de"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12pt"
                android:text="Doktrin Kejaksaan"/>

            <TextView
                android:id="@+id/doktrin_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doktrin_title"
                android:padding="10dp"
                android:text="Trikrama Adhyaksa :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/doktrin_subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doktrin_subtitle"
                android:padding="10dp"
                android:text="&#8220;Satya Adhi Wicaksana&#8221;"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="8pt"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/doktrin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doktrin_subtitle2"
                android:lineSpacingExtra="5sp"
                android:padding="10dp"
                android:text="@string/doktrin"
                />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>