<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ETilang.alur_tilang"
    android:background="@drawable/bg9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp">
            <TextView
                android:id="@+id/alurTilang_title_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e2e2de"
                android:padding="10dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="12pt"
                android:text="Alur E-Tilang"/>


            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/isi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alurTilang_title_heading"
                android:lineSpacingExtra="5sp"
                android:padding="10dp"
                android:text="@string/alur"
                android:textSize="8pt"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>