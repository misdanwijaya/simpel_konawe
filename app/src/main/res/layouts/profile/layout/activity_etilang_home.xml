<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ETilang.etilang_home"
    android:orientation="vertical"
    android:background="@drawable/bg8">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="70dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="E-Tilang"
            android:textSize="10pt"
            android:textStyle="bold"
            android:background="#e2e2de"/>

    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonCaraEtilang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tata Cara"
                android:textSize="8pt"
                android:background="#e6cf00"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAlurEtilang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Alur E-Tilang"
                android:textSize="8pt"
                android:background="#e6cf00"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonLaporanEtilang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Laporan Perkara"
                android:textSize="8pt"
                android:background="#e6cf00"/>

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>