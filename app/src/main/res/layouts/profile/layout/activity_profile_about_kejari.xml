<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.aboutKejari"
    android:background="@drawable/bg9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp">
    <TextView
        android:id="@+id/kejari_title_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2e2de"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="12pt"
        android:text="Kejaksaan RI"/>

        <TextView
            android:id="@+id/kejari_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kejari_title_heading"
            android:padding="10dp"
            android:textAppearance="@android:style/TextAppearance"
            android:text="Tentang Kejaksaan RI"
            android:textSize="10pt"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kejari_subtitle">
        </ScrollView>

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/kejari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kejari_subtitle"
            android:lineSpacingExtra="5sp"
            android:padding="10dp"
            android:textSize="8pt"
            android:text="@string/kejari"/>
    </RelativeLayout>
</LinearLayout>